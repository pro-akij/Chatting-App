<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllUser.UserProfile"
    android:orientation="vertical">

    <include layout="@layout/custom_app_ber"
        android:id="@+id/user_profile_app_ber"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="9">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300sp">

                    <ImageView
                        android:id="@+id/display_profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack"
                    android:orientation="vertical"
                    android:padding="10sp">


                    <TextView
                        android:id="@+id/display_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:text="profile name"/>

                    <TextView
                        android:id="@+id/display_profile_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="gerder"/>

                    <TextView
                        android:id="@+id/display_profile_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="birth date"/>

                    <TextView
                        android:id="@+id/display_profile_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="profile status"/>

                    <TextView
                        android:id="@+id/display_profile_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="user location"/>

                    <TextView
                        android:id="@+id/display_profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="email"/>

                    <TextView
                        android:id="@+id/display_profile_profession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="profession"/>

                    <TextView
                        android:id="@+id/display_profile_institute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="institute"/>

                    <TextView
                        android:id="@+id/display_profile_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:text="bio"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/colorBlack"
        android:orientation="vertical">

        <Button
            android:id="@+id/send_frnd_request"
            android:layout_width="300sp"
            android:layout_height="30sp"
            android:background="@drawable/round"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:text="send friends request"/>

        <Button
            android:id="@+id/cancel_frnd_request"
            android:layout_width="300sp"
            android:layout_height="30sp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:layout_marginTop="5sp"
            android:text="disline frinds request"/>

    </LinearLayout>

</LinearLayout>